<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="메모"
        android:textSize="20sp"/>
    <EditText android:id="@+id/edittext_rowid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="기존 rowid 입력 (삭제/변경 시 유효)"
        android:textSize="15sp"/>
    <EditText android:id="@+id/edittext_memo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="메모 내용 입력"
        android:textSize="15sp"/>
    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button android:id="@+id/button_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저장"
            android:layout_margin="10dp"
            android:textSize="15sp"/>
        <Button android:id="@+id/button_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="변경"
            android:layout_margin="10dp"
            android:textSize="15sp"/>
        <Button android:id="@+id/button_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="삭제"
            android:layout_margin="10dp"
            android:textSize="15sp"/>
    </LinearLayout>
    <Button android:id="@+id/button_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메모 보기"
        android:textSize="15sp"/>
    <EditText android:id="@+id/edittext_display"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="top"
        android:textSize="15sp"/>
</LinearLayout>